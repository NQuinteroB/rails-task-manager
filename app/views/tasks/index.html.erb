<h1>My task</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" <%= "checked".html_safe if task.completed %>>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "🖋️", edit_task_path(task) %>
      <%= link_to "delete",
  list_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>


